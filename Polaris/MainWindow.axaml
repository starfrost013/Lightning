<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Polaris.MainWindow"
        Title="Polaris">
  <Grid x:Name="Main" Width="800" Margin="10,-425,0,0" Height="450">
    <Menu x:Name="Polaris_Menu">
      <MenuItem x:Name="Polaris_FileMenu" Header="File">
        <MenuItem x:Name="Polaris_FileMenu_Open" Header="Open"></MenuItem>
        <MenuItem x:Name="Polaris_FileMenu_Save" Header="Save"></MenuItem>
        <MenuItem x:Name="Polaris_FileMenu_SaveAs" Header="Save As"></MenuItem>
      </MenuItem>
      <MenuItem x:Name="Polaris_EditMenu" Header="Edit">
        <MenuItem x:Name="Polaris_EditMenu_EditScript" Header="Script..."></MenuItem>
      </MenuItem>
      <MenuItem x:Name="Polaris_ObjectMenu" Header="Object">
        <MenuItem x:Name="Polaris_ObjectMenu_InsertObject" Header="Insert Object"></MenuItem>
      </MenuItem>
      <MenuItem x:Name="Polaris_HelpMenu" Header="Help">
        <MenuItem x:Name="Polaris_HelpMenu_Documentation" Header="Online Documentation"></MenuItem>
        <Separator/>
        <MenuItem x:Name="Polaris_HelpMenu_About" Header="About LightningSDK..."></MenuItem>
      </MenuItem>
    </Menu>
  </Grid>

</Window>
