<Page x:Class="Polaris.UI.Explorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Polaris.UI"
             mc:Ignorable="d" Height="407" Width="162">
    <Grid>

        <TextBlock x:Name="Polaris_Explorer_Header" Text="DataModel Explorer:" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,0,0,0"/>
        <TreeView x:Name="Polaris_Explorer" x:FieldModifier="public" ItemsSource="{Binding}" DisplayMemberPath="Name" Margin="0,16,0,0"/>
    </Grid>
</Page>
