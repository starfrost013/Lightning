<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyVersion>1.0.8.21064</AssemblyVersion>
    <FileVersion>1.0.8.21064</FileVersion>
  </PropertyGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="echo %25date%25%25time%25 &gt; Resources\BuildDate.txt&#xD;&#xA;echo %25USERNAME%25 on %25COMPUTERNAME%25 &gt; Resources\BuildInformation.txt" />
  </Target>

  <ItemGroup>
    <None Remove="Resources\BuildDate.txt" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\BuildDate.txt" />
  </ItemGroup>

</Project>
